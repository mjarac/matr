<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <import resource="classpath:com/andestic/matricula/spring/config.xml"/>

    <bean id="authorizationController" class="com.andestic.matricula.controller.AuthorizationController">
        <property name="authorizationService" ref="AuthorizationServiceImpl"></property>
    </bean>
    <bean id="AuthorizationServiceImpl" class="com.andestic.matricula.servicio.impl.AuthorizationServiceImpl">
        <property name="autenticacionDao" ref="AutenticacionDaoImpl"></property>
        <property name="authorizationDao" ref="AuthorizationDaoImpl"></property>
    </bean>

    <bean id="AutenticacionDaoImpl" class="com.andestic.matricula.dao.imp.AutenticacionDaoImpl"></bean>
    <bean id="AuthorizationDaoImpl" class="com.andestic.matricula.dao.imp.AuthorizationDaoImpl"></bean>
</beans>